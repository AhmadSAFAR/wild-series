{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1 class="p-3 mt-5 bg-danger text-white text-center ">Episode index</h1>
    <h1 class="text-center"><a class="btn btn-outline-danger"<a href="{{ path('episode_new') }}">Create new</a></h1>

    <table class="table">
        <thead class="bg-success text-white">
            <tr>
                <th>Title</th>
                <th>Number</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <a class="btn btn-outline-success" href="{{ path('episode_show', {'id': episode.id}) }}">show</a>
                    <a class="btn btn-outline-success mt-2" href="{{ path('episode_edit', {'id': episode.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
{% endblock %}
