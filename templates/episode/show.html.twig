{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>
    <div>
    <h1>Comment</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Comment</th>
                <th>Rate</th>
            
                <th>actions</th>
             
            </tr>
        </thead>
        <tbody>
        {% for comments in episode.comments %}
            <tr>
                <td>{{ comments.comment }}</td>
                <td>{{ comments.rate }}</td>
             
                <td>   
                     {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('comment_edit', {'id': comments.id}) }}">edit</a>
                        {% endif %}
                              {% if app.user.id is defined and (app.user.id == comments.author.id or is_granted('ROLE_ADMIN')) %}
                            <a class="btn btn-danger text-white" href="{{ path('comment_delete', {'id': comments.id}) }}">Supprimer</a>
                            {% endif %}
    

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 
        <p class="text-center bg-danger text-white">Ajouter un commentaire : </p>
        {{ include('comment/_form.html.twig') }}
   

    </div>

    <a  class="btn btn-success mt-3"  href="{{ path('episode_index') }}">back to list</a>
{% if is_granted('ROLE_ADMIN') %}
    <a class="btn bg-danger mt-3 text-light" href="{{ path('episode_edit', {'slug': episode.slug}) }}">edit</a>
    {{ include('episode/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
