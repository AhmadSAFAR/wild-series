{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ comment.comment }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ comment.rate }}</td>
            </tr>
        </tbody>
    </table>

    <a  class="btn btn-success mt-3" href="{{ path('episode_index')}}">back to list</a>
{% if  is_granted('ROLE_ADMIN')  %}
    <a class="btn btn-danger mt-3" href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>
    {% endif %}
 {% if is_granted('ROLE_SUBSCRIBER') and app.user.id == comment.author.id  or is_granted('ROLE_ADMIN')  %}
{{ include('comment/_delete_form.html.twig') }}    
{% endif %}

    
{% endblock %}
