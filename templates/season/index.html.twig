{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
    <h1 class="p-3 mt-5 bg-danger text-white text-center "> les Season</h1>
 <h1 class="text-center"><a class="btn btn-outline-danger" href="{{ path('season_new') }}">Create new</a></h1>

    <table class="table">
        <thead class="bg-success text-white">
            <tr>
                <th>Number</th>
                <th>Year</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }}</td>
                <td>
                    <a  class="btn btn-outline-success" href="{{ path('season_show', {'id': season.id}) }}">show</a>
                    <a  class="btn btn-outline-success mt-2" href="{{ path('season_edit', {'id': season.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 
{% endblock %}
